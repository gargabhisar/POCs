@using BookInventory.Helpers
@{
    var user = SessionHelper.GetUser(Context);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookInventory</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookInventory.styles.css" asp-append-version="true" />
</head>

<body class="light">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">
                    BookInventory
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav flex-grow-1">
                        @if (user != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Dashboard"
                                   asp-action="Index">Dashboard</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Books"
                                   asp-action="Index">Books</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Export"
                                   asp-action="Books">Export</a>
                            </li>
                            @if (user != null && user.Role == "Admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle"
                                       href="#"
                                       role="button"
                                       data-bs-toggle="dropdown">
                                        Billing
                                    </a>

                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Billing"
                                               asp-action="Create">
                                                Create Book Invoice
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Billing"
                                               asp-action="List">
                                                Book Invoice List
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Reports"
                                               asp-action="BookSales">
                                                Book Sales List
                                            </a>
                                        </li>

                                        <li><hr class="dropdown-divider" /></li>

                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Billing"
                                               asp-action="CreatePublishing">
                                                Create Publishing Invoice
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Billing"
                                               asp-action="PublishingList">
                                                Publishing Invoice List
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle"
                                       href="#"
                                       role="button"
                                       data-bs-toggle="dropdown">
                                        Enquiry
                                    </a>

                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Enquiry"
                                               asp-action="Create">
                                                New Enquiry
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Enquiry"
                                               asp-action="List">
                                                Enquiry List
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="WhatsApp"
                                       asp-action="Send">
                                        Send WhatsApp
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Inbox"
                                       asp-action="Index">
                                        📥 Inbox
                                    </a>
                                </li>
                            }

                        }
                    </ul>

                    <!-- RIGHT MENU -->
                    <div class="d-flex align-items-center gap-3">

                        @if (user != null)
                        {
                            <!-- PROFILE DROPDOWN -->
                            <div class="dropdown">

                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                        type="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    👤 @user.Email
                                </button>

                                <ul class="dropdown-menu dropdown-menu-end shadow">

                                    <!-- USER INFO -->
                                    <li class="px-3 py-2">
                                        <div class="fw-semibold">@user.Email</div>

                                        <span class="badge
                            @(user.Role == "Admin" ? "bg-danger" : "bg-secondary")">
                                            @user.Role
                                        </span>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- ADMIN ONLY -->
                                    @if (user.Role == "Admin")
                                    {
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Account"
                                               asp-action="Register">
                                                ➕ Create User
                                            </a>
                                        </li>
                                    }

                                    <a class="dropdown-item"
                                       asp-controller="Account"
                                       asp-action="ChangePassword">
                                        🔑 Change Password
                                    </a>

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- LOGOUT -->
                                    <li>
                                        <a class="dropdown-item text-danger"
                                           asp-controller="Account"
                                           asp-action="Logout">
                                            🚪 Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }

                        <!-- THEME TOGGLE -->
                        <button class="btn btn-outline-secondary btn-sm"
                                type="button"
                                onclick="toggleTheme()"
                                title="Toggle theme">
                            🌗
                        </button>

                    </div>


                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - BookInventory
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
