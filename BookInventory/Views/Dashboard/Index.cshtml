@using BookInventory.Models

<h2>Dashboard</h2>

<div class="row">
    <div class="col">📚 Total Books: <b>@ViewBag.TotalBooks</b></div>
    <div class="col">🔢 Total Quantity: <b>@ViewBag.TotalQuantity</b></div>
</div>

<hr />

<div class="row">
    <div class="col">Almirah: @ViewBag.Almirah</div>
    <div class="col">Bed: @ViewBag.Bed</div>
    <div class="col">Box: @ViewBag.Box</div>
    <div class="col">Other: @ViewBag.Other</div>
</div>

<hr />

<div class="row mt-4">

    <!-- LOW STOCK (LEFT) -->
    <div class="col-md-6">
        <h4 class="text-warning">⚠ Low Stock (&lt; 5)</h4>

        @if (ViewBag.LowStock.Count == 0)
        {
            <p class="text-muted">No low stock books 🎉</p>
        }
        else
        {
            <ul>
                @foreach (var b in ViewBag.LowStock)
                {
                    <li>
                        <strong>@b.Title</strong> — @b.TotalQuantity
                    </li>
                }
            </ul>
        }
    </div>

    <!-- OUT OF STOCK (RIGHT) -->
    <div class="col-md-6">
        <h4 class="text-danger">🚫 Out of Stock (0)</h4>

        @if (ViewBag.OutOfStock.Count == 0)
        {
            <p class="text-muted">No books are out of stock 🎉</p>
        }
        else
        {
            <ul>
                @foreach (var b in ViewBag.OutOfStock)
                {
                    <li>
                        <strong>@b.Title</strong> — @b.TotalQuantity
                    </li>
                }
            </ul>
        }
    </div>

</div>

