@model List<BookInventory.Models.Invoice>

<h3>Invoices</h3>

<div class="row mb-3">
    <div class="col-md-4">
        <input type="text"
               id="invoiceSearch"
               class="form-control"
               placeholder="Search by Invoice No, Name or Mobile"
               onkeyup="filterInvoices()" />
    </div>
</div>

<table class="table table-bordered table-hover" id="invoiceTable">
    <thead class="table-light">
        <tr>
            <th>Invoice No</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Mobile</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="invoiceTableBody">
        @foreach (var inv in Model)
        {
            <tr>
                <td>INV-@inv.InvoiceNo.ToString("D4")</td>
                <td>@inv.InvoiceDate.ToString("dd-MM-yyyy HH:mm")</td>
                <td>@inv.CustomerName</td>
                <td>@inv.CustomerMobile</td>
                <td>₹ @inv.GrandTotal.ToString("0.00")</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary"
                       asp-action="Download"
                       asp-route-id="@inv.Id">
                        Download
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="noResults"
     class="text-center text-muted mt-3"
     style="display:none;">
    No invoices found.
</div>

<script>
    function filterInvoices() {
        const input = document.getElementById("invoiceSearch");
        const filter = input.value.toLowerCase();

        const table = document.getElementById("invoiceTable");
        const rows = table.getElementsByTagName("tr");

        let visibleCount = 0;

        // Skip header row (i = 1)
        for (let i = 1; i < rows.length; i++) {
            const cells = rows[i].getElementsByTagName("td");
            if (!cells.length) continue;

            const invoiceNo = cells[0].innerText.toLowerCase();
            const customer  = cells[2].innerText.toLowerCase();
            const mobile    = cells[3].innerText.toLowerCase();

            if (
                invoiceNo.includes(filter) ||
                customer.includes(filter) ||
                mobile.includes(filter)
            ) {
                rows[i].style.display = "";
                visibleCount++;
            } else {
                rows[i].style.display = "none";
            }
        }

        document.getElementById("noResults").style.display =
            visibleCount === 0 ? "block" : "none";
    }
</script>