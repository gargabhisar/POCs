@{
    ViewData["Title"] = "Login";
}

@if (TempData["SuccessPassword"] != null)
{
    <div class="alert alert-success">@TempData["SuccessPassword"]</div>
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">

        <h3 class="text-center mb-4">Login</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        <form method="post">

            <div class="mb-3">
                <label>Email</label>
                <input type="email"
                       name="email"
                       class="form-control"
                       required />
            </div>

            <div class="mb-3">
                <label>Password</label>
                <input type="password"
                       name="password"
                       class="form-control"
                       required />
            </div>

            <button type="submit"
                    class="btn btn-primary w-100">
                Login
            </button>

        </form>
    </div>
</div>
