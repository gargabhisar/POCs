@model BookInventory.Models.Book

<div class="container mt-4">
    <div class="card shadow-sm">

        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Edit Book</h5>

            <!-- Serial No Badge -->
            <span class="badge bg-primary fs-6">
                Serial No: @Model.SerialNo
            </span>
        </div>

        <div class="card-body">
            <form method="post">

                <!-- Hidden identifiers -->
                <input asp-for="Id" type="hidden" />
                <input asp-for="SerialNo" type="hidden" />

                <!-- Validation summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- BASIC DETAILS -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">
                            Title <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">
                            Author <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">
                            ISBN <span class="text-danger">*</span>
                        </label>
                        <input asp-for="ISBN" class="form-control" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>
                </div>

                <hr />

                <!-- LOCATION QUANTITIES -->
                <h6 class="mb-3">Storage Locations</h6>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Almirah</label>
                        <input asp-for="Locations.Almirah"
                               type="number"
                               class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Bed</label>
                        <input asp-for="Locations.Bed"
                               type="number"
                               class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Box</label>
                        <input asp-for="Locations.Box"
                               type="number"
                               class="form-control" />
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label">Other Location Name</label>
                        <input asp-for="Locations.Other.Name"
                               class="form-control"
                               data-val="false" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Other Quantity</label>
                        <input asp-for="Locations.Other.Quantity"
                               type="number"
                               class="form-control" />
                    </div>
                </div>

                <!-- TOTAL QUANTITY (DISPLAY ONLY, BACKEND CONTROLLED) -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Total Quantity</label>
                        <input asp-for="TotalQuantity"
                               class="form-control"
                               readonly />
                    </div>
                </div>

                <!-- ACTION BUTTONS -->
                <div class="d-flex justify-content-end gap-2">
                    <a href="/Books" class="btn btn-outline-secondary">
                        Cancel
                    </a>

                    <button type="submit" class="btn btn-primary">
                        Update Book
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}