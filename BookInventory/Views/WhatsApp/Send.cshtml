<h2>Send WhatsApp Messages</h2>

<form method="post">
    <div class="form-group">
        <label>Template</label>

        <select id="templateSelect"
                name="templateName"
                class="form-control"
                required>
            <option value="">-- Select Template --</option>

            @foreach (var t in (List<WhatsAppTemplateDto>)ViewBag.Templates)
            {
                var isApproved = t.Status == "APPROVED";

                <option value="@t.Name"
                        disabled="@(isApproved ? null : "disabled")">
                    @t.Name (@t.Category, @t.Status)
                </option>
            }
        </select>
    </div>

    <br />

    <button id="sendBtn"
            class="btn btn-primary"
            type="submit"
            disabled>
        Send Messages
    </button>
</form>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success mt-3">
        @ViewBag.Success
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}
<script>
    const templateSelect = document.getElementById("templateSelect");
    const sendBtn = document.getElementById("sendBtn");

    templateSelect.addEventListener("change", function () {
        sendBtn.disabled = this.value === "";
    });
</script>